@model LMS.Core.ViewModels.LmsViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Ändra</h1>

<h4>Aktivitet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <p>Modulperioden är @Model.ModuleStart.ToShortDateString() till @Model.ModuleEnd.ToShortDateString().</p>
            <div class="form-group">
                <label asp-for="StartDateTime" class="control-label"></label>
                <input asp-for="StartDateTime" class="form-control" />
                <span asp-validation-for="StartDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDateTime" class="control-label"></label>
                <input asp-for="EndDateTime" class="form-control" />
                <span asp-validation-for="EndDateTime" class="text-danger"></span>
            </div>
            <input asp-for="ModuleId" type="hidden" />
            <input asp-for="ActivityTypeId" type="hidden" />
            <div class="form-group">
                <input asp-for="ModuleStart" type="hidden" />
                <span asp-validation-for="ModuleStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="ModuleEnd" type="hidden" />
                <span asp-validation-for="ModuleEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Spara" class="btn btn-primary btn-sm" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Courses" asp-action="MainIndex">Tillbaka till Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
