@model IEnumerable<LMS.Core.Models.Activity>

<div class="row pt-4">
    <div class="col-8">
        <h6>Modulbeskrivning</h6>
        <p>
            @ViewBag.module.Description
        </p>
    </div>

    <div class="col-4">
            <div class="row">
                <div class="col-7 p-0"><h6>Moduldokument</h6></div>
                <a class="btn btn-sm btn-outline-secondary module text-right" asp-controller="Documents" asp-action="CreateModuleDocument" asp-route-id="@ViewBag.module.Id">Skapa dokument</a>
            </div>
        <p>
            <partial name="_DocumentsPartial" model="@ViewBag.module.Documents" />
        </p>
    </div>
</div>


<div class="row card-body">
    <div class="col-3"><h5>Aktiviteter</h5></div>
    @if (User.IsInRole("Admin") || User.IsInRole("Lärare"))
    {
        <div>
            <a class="btn btn-sm btn-outline-secondary activity" asp-controller="Activities" asp-action="Create" asp-route-id="@ViewBag.Module.Id">Skapa ny aktivitet</a>
        </div>
    }
    </div>
@foreach (var item in Model)
{
    <partial name="_ActivityPartial" model="item" />
}