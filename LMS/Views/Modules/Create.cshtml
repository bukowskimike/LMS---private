@model LMS.Core.ViewModels.ModuleViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Skapa</h1>

<h4>Modul</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <p>Kursperioden är @Model.CourseStart.ToShortDateString() till @Model.CourseEnd.ToShortDateString().</p>
            <div class="form-group">
                <label asp-for="StartDateTime" class="control-label"></label>
                <input asp-for="StartDateTime" class="form-control" />
                <span asp-validation-for="StartDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDateTime" class="control-label"></label>
                <input asp-for="EndDateTime" class="form-control" />
                <span asp-validation-for="EndDateTime" class="text-danger"></span>
            </div>
            <input asp-for="CourseId" type="hidden" />
            <div class="form-group">
                <input asp-for="CourseStart" type="hidden" />
                <span asp-validation-for="CourseStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="CourseEnd" type="hidden" />
                <span asp-validation-for="CourseEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Skapa" class="btn btn-outline-secondary module" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Courses" asp-action="MainIndex">Tillbaka till listan</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
